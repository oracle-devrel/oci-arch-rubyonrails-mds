[
  {
    "action": "create_zip",
    "file_name": "oci-arch-rubyonrails-mds-latest.zip",
    "files": [
      {
        "src_pattern": "*.tf",
        "dst_path": ".",
        "exclude": [
          "provider.tf",
          "variables.tf"
        ]
      },
      {
        "src": "LICENSE"
      },
      {
        "src": "schema.yaml",
        "dst": "schema.yaml"
      },
      {
        "src": "orm/variables.tf",
        "dst": "variables.tf"
      },
      {
        "src": "orm/provider.tf",
        "dst": "provider.tf"
      },
      {
        "src_pattern": "scripts/*"
      }, 
      {
        "src_pattern": "ror/*"
      }  
    ]
  },
  {
    "action": "upload_file",
    "file_name": "oci-arch-rubyonrails-mds-latest.zip"
  }
]
